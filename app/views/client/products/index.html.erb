  <ul>
    <li><a href="/client/products?sort_by=price">Price - Low to High</a></li>
    <li><a href="/client/products?sort_by=price&&sort_order=desc">Price - High to Low</a></li>
    <li><a href="/client/products?sort_by=name">Name - A to Z</a></li>
      <li><a href="/client/products?sort_by=name&&sort_order=desc">Name - Z to A</a></li>
  </ul>
</ul>


<%= form_tag "/client/products", method: :get do %>
  <input type="text" name="search" placeholder="Search Term">
  <input type="submit" value="Go!">
<% end %>


<% @products.each do |product| %>
 <h2><a href="/client/products/<%= product["id"] %>"><%= product["name"] %></a></h2>

  <% if product["discounted"] %>
    <h3>Discount Item! </h3>
  <% else %>
    <h3>Everyday Value! </h3>
  <% end %>


  <h3 style="color: red;"><%= product["formatted"]["price"] %></h3>
  <h4>Description: <%= product["description"] %></h4>
  <img src="<%= product["image_url"] %>" alt="" >
  
<% end %>